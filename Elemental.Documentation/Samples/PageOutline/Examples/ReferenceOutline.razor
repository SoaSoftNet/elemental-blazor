<AeOutline Anchors="_Anchors"/>
<p @ref="p" >test1</p>
<div @ref="div">test 2</div>


@code{
    private List<(ElementReference Reference, RenderFragment ChildContent)> _Anchors;
    private ElementReference div;
    private ElementReference p;
    protected override void OnAfterRender(bool firstRender)
    {
        _Anchors = new List<(ElementReference Reference, RenderFragment ChildContent)>()
        {
            (div, @<div>Div</div>),
            (p, @<div>P</div>),
        };
        StateHasChanged();
    }
}
