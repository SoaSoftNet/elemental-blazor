<AeTypography>Selected item: @selected[0]</AeTypography>

<AeMultiSelect 
    Label="Basic Dropdown"
    @bind-SelectedItems="selected"
    Items="_dropdownItems"
   
/>

@code {

    private List<string> selected = new List<string> { "Second"};

    private List<string> _dropdownItems = new List<string>
    {
        "First", "Second", "Third", "Fourth", "Fifth", "Sixth"
    };

}
