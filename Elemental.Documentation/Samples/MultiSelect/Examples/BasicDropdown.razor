<AeTypography>Selected item: @(selected.Count > 0 ? selected.First():"-")</AeTypography>

<AeMultiSelect 
    DefaultLabel="Please select a value"
    @bind-SelectedItems="selected"
    Items="_dropdownItems"
/>

@code {

    private SortedSet<string> selected = new SortedSet<string>(new [] { "Second"});

    private List<string> _dropdownItems = new List<string>
    {
        "First", "Second", "Third", "Fourth", "Fifth", "Sixth"
    };

}
