<AeNavbar Links="_navLinks">
    <Brand>
        <div class="nav-logo">
            <img src="/img/datahunter-logo.png" />
        </div>
    </Brand>
</AeNavbar>


@code {
    @using Elemental.Code;

    private List<AeNavLink> _navLinks = new List<AeNavLink>
    {
        new AeNavLink()
        {
            To = "#",
            Label = "Home",
        },
        new AeNavLink()
        {
            To = "#",
            Label = "News",
        },
    };
}


