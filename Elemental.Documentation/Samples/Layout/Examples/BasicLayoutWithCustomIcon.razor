            new AeNavLink{ Label = "Sub 4", To = "/main6/sub4", Color = "purple", IconRender = @<AeIcon Icon="focus" IconStyle="RXIcon.RXStyle.Fill"></AeIcon> },
            new AeNavLink{ Label = "Sub 5", To = "/main6/sub5", Color = "purple", IconRender = @<AeIcon Icon="focus" IconStyle="RXIcon.RXStyle.Fill"></AeIcon> },

        } }
