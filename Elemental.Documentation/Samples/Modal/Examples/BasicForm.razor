<AeInput OnInputChange="HandleInputChanged"></AeInput>

@code {
    [CascadingParameter]
    public AeModal Modal { get; set; }

    public void HandleInputChanged(string input)
    {
        Modal.ModalResult = new Code.ModalResult(input, input.GetType());
    }

}
