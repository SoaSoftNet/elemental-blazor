@using Elemental.Services
@inject UIControlsService UIControlService

<AeButton OnClick="@ShowModal">Show Modal</AeButton>

@code {    
    private string _userInput;

    private List<string> _choiceList = new List<string>() { "Choice 1", "Choice 2", "Choice 3" };
    private void ShowModal()
    {
        RenderFragment modalContent = @<UserChoiceModal ChoiceTextList="_choiceList" OnDecision="e => UIControlService.ToggleModal()" HeaderText="Default" />;
        //var modalParameter = new Elemental.Code.ModalParameter() { Class = "modal", Content = modalContent, DisableBackgroundCancel = false };
        UIControlService.ToggleModal(modalContent);
    }

}