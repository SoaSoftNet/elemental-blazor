    Title: Basic Dropdowns
    Description: Single option dropdown selector, hover over 
*@

<AeTypography>Selected item: @_selectedItem</AeTypography>

<AeDropdown
    Label="Basic Dropdown"
    Items="_dropdownItems"
    @bind-Selected="_selectedItem"    
/>

@code {

    private string _selectedItem;

    private List<string> _dropdownItems = new List<string>
    {
        "First", "Second", "Third", "Fourth", "Fifth", "Sixth"
    };

}
