    Title: Custom Rendered Label
    Description: If you don't pass in a label but a LabelRenderFragment you can customize the dropdown label
*@

<AeTypography>Selected item: @_selectedItem</AeTypography>

<AeDropdown LabelRenderFragment="getLabel"
            Items="_dropdownItems"
            @bind-Selected="_selectedItem"   />

@code {
    private string _selectedItem = "Second";

    private RenderFragment getLabel(string s)
    {
        return @<i class="fas fa-ellipsis-h" style="background-color: #e3e3e3; padding: 0.5rem; cursor: pointer; border-radius: 8px;"></i>;
    }

    private List<string> _dropdownItems = new List<string>
    {
        "First", "Second", "Third", "Fourth", "Fifth", "Sixth"
    };

}

