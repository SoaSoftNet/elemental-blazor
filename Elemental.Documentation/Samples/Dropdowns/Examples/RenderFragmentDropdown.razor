    Title: Custom Rendered Dropdown Items
    Description: You can pass in render fragments to customize the dropdown items
*@

<AeTypography>Selected item: @_selectedItem</AeTypography>

<AeDropdown Label="Basic Dropdown"
            Items="_dropdownItems"
            OnChange="HandleDropdownChange" />

@code {

    private RenderFragment _selectedItem;

    private List<RenderFragment> _dropdownItems;

    protected override void OnInitialized()
    {
        _dropdownItems = new List<RenderFragment>();
        _dropdownItems.Add(@<div><i class="fal fa-egg-fried"></i>Eggs</div>);
        _dropdownItems.Add(@<div><i class="fal fa-coffee"></i>Coffee</div>);
        _dropdownItems.Add(@<div><i class="fal fa-bacon"></i>Bacon</div>);
    }

    private void HandleDropdownChange(RenderFragment selectedItem)
    {
        _selectedItem = selectedItem;
        StateHasChanged();
    }
}
