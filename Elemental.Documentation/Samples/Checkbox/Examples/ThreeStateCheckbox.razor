    Title: 3-State Checkbox
    Description: A checkbox that has three states true, false, and null. True reporesents a check, null represents a dash, and false is empty. This is used in the Treeview component
*@
<div>
    <AeCheckbox IsChecked="isChecked" ItemSelected="toggleCheckbox" />
</div>


@code {
    private bool? _isChecked = false;

    private bool? isChecked()
    {
        return _isChecked;
    }

    private void toggleCheckbox()
    {
        if (_isChecked == false)
        {
            _isChecked = null;
        }
        else if (_isChecked == null)
        {
            _isChecked = true;
        }
        else
        {
            _isChecked = false;
        }
    }
}