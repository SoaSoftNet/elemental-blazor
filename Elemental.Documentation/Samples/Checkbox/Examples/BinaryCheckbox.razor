  Title: Basic Checkbox
  Description: A checkbox that has two binary states.
*@
<div>
  <AeCheckbox IsChecked="isChecked" ItemSelected="toggleCheckbox" />
</div>


@code {
    private bool _isChecked = true;

    private bool? isChecked()
    {
        return new bool?(_isChecked);
    }

    private void toggleCheckbox()
    {
        _isChecked = !_isChecked;
    }
}