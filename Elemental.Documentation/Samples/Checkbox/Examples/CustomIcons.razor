  Title: Three State Checkbox with Custom Icons
  Description: You can pass in optional icon class names to override the default ones. If an icon class name parameter is not passed it the default icon will be displayed
*@
<div>
  <AeCheckbox IsChecked="@IsChecked" IsCheckedChanged="toggleCheckbox" @bind-HasValue="HasValue" NullIcon="ri-brackets-line"
              CheckedIcon="ri-braces-line" UncheckedIcon="ri-code-line"/>
</div>


@code {
    private bool IsChecked { get; set; }
    private bool HasValue { get; set; }

    private void toggleCheckbox(bool value)
    {
        if (!HasValue)
        {
            HasValue = !HasValue;
            IsChecked = true;
        }
        else  if (value == true)
        {
            IsChecked = false;
            HasValue = false;
        } else
        {
            IsChecked = value;
        }
    }

}