<AeFlex Vertical class="sidenav">
    <NavLink href="https://wwww.apption.com" class="logo">
        <img src="/img/apption-logo-white.svg"/>
    </NavLink>
    @foreach(var link in sidenavLinks)
    {
        <NavLink class="nav-link" href="@link.Link" Match="NavLinkMatch.All">
            <AeTypography>@link.Label</AeTypography>
        </NavLink>
    }
</AeFlex>

@code {

    private List<dynamic> sidenavLinks = new List<dynamic>()
    {
        new { Label = "Home", Link = "/" },
        new { Label = "Typography", Link = "/typography" },
        new { Label = "Layout", Link = "/layout" },
        new { Label = "Navbar", Link = "/navbar" },
        new { Label = "Buttons", Link = "/buttons" },
        new { Label = "Forms", Link = "/modelform" },
        new { Label = "Inputs", Link = "/inputs" },
        new { Label = "Dropdowns", Link = "/dropdowns"},
        new { Label = "Cards", Link = "/cards" },
        new { Label = "Progress Bar", Link = "/progress" },
        new { Label = "Modal", Link = "/modal" },
        new { Label = "Collapse", Link = "/collapse" },
        new { Label = "Tables", Link = "/tables" },
        new { Label = "Menu", Link = "/menu"},
