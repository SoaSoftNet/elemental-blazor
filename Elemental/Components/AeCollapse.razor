@inherits HtmlElement

  <div class="@_classname" @attributes="InputAttributesWithoutClass">
    <div class="ae header" @onclick="ToggleSection">
      @Header
    </div>
    <div class="ae body" style="height:@Height">
      @ChildContent 
    </div>
  </div>

@code {

  [Parameter]
  public string Header { get; set; }
  [Parameter]
  public string Height { get; set; } = "0";

  public void ToggleSection()
  {
    if (Height == "0")
    {
      Height = "100%";
    } else
    {
      Height = "0";
    }
  }

  private string _classname => $"ae collapse {_inputClass}";
}