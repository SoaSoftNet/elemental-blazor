@inherits HtmlElement
@using Elemental.Components.LayoutInternal

<div class="@_layoutClassname">   
    <AeSideNav Brand="Brand" Links="Links" SidebarExpandThreshold="SidebarExpandThreshold" SidebarShrunkThreshold="SidebarShrunkThreshold" StayCollapse="StayCollapse">
        <Bottom>
            @Bottom
        </Bottom>
    </AeSideNav>
    <div class="@_wrapperClassname">
        @if (TopBar != null)
        {
            <AeTopBar>
                @TopBar
            </AeTopBar>
        }
        @Body
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment Brand { get; set; }

    [Parameter]
    public List<AeNavLink> Links { get; set; }

    [Parameter]
    public RenderFragment TopBar { get; set; }
    [Parameter]
    public RenderFragment Body { get; set; }
    [Parameter]
    public RenderFragment Bottom { get; set; } 

    [Parameter]
    public int SidebarExpandThreshold { get; set; } = 1400;
    [Parameter]
    public int SidebarShrunkThreshold { get; set; } = 1400;
    [Parameter]
    public bool StayCollapse { get; set; } = false;

    private string _layoutClassname => $"ae layout {_inputClass}";
    private string _wrapperClassname => $"ae content-wrapper";

}
