@namespace Elemental.Components
@inherits HtmlElement
@inject NavigationManager NavigationManager

<ae-button @onclick="HandleClick"
           @attributes="@InputAttributes"
           disabled="@Disabled"
           appearance="@ButtonAppearance.ToString().ToLower()">
    @ChildContent
</ae-button>

@code {

    [Parameter]
    [Obsolete("Use the 'href' attribute or OnClickEvent instead")]
    public string? To { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Appearance ButtonAppearance { get; set; } = Appearance.Neutral;

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickEvent { get; set; }

    private async Task HandleClick(MouseEventArgs args)
    {
        if (Disabled)
        {
            return;
        }

        if (!string.IsNullOrWhiteSpace(To))
        {
            NavigationManager.NavigateTo(To);
        }
        else
        {
            await OnClickEvent.InvokeAsync(args);
        }
    }
}