@inherits HtmlElement

  <div class="@_classname">
    @if (Image != null)
    {
      <img class="ae image" src="@Image" />
    }

    @if ( Title != null)
    {
      <div class="ae title">
        @Title
      </div>
    }
      <div class="ae content">
        @ChildContent
      </div>
  </div>

@code {
  [Parameter]
  public string Title { get; set; }
  [Parameter]
  public string Image { get; set; }


  private string _classname => $"ae card {_inputClass}";
}