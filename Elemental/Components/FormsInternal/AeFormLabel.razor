@if (!string.IsNullOrWhiteSpace(@FormTools.GetLabel(PropertyInfo)))
{
    <label class="ae ae-form-control-label" for="@GetID()">
        <AeTypography Variant="p">@FormTools.GetLabel(PropertyInfo)</AeTypography>
    </label>
}
else
{
    <div></div>
}




@code {

    [Parameter]
    public System.Reflection.PropertyInfo PropertyInfo { get; set; }

    /// <summary>
    /// There are two major layout options. Standard has line based with label / field and compact has a tabular layout with CSS flex.
    /// </summary>
    [Parameter] public ModelFormStyle ModelFormStyle { get; set; }

    private string GetID() => PropertyInfo.Name;
}
