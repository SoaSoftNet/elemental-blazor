@namespace Elemental.Components
@using Markdig
@using Elemental.Code.Markdig
@inherits HtmlElement

<AeFlex class="markdown-container">
    @((MarkupString)RenderHTML())
</AeFlex>

@code {

    [Parameter]
    public string Content { get; set; }

    private MarkdownPipeline _pipeline = null;

    protected override async Task OnInitializedAsync()
    {
        var builder = new MarkdownPipelineBuilder().UseAdvancedExtensions();
        builder.Extensions.AddIfNotAlready<AeMDStyleExtension>();
        _pipeline = builder.Build();        
    }

    public string RenderHTML()
    {
        return Markdig.Markdown.ToHtml(Content,_pipeline);
    }

    private string _classname => $"ae progress {_inputClass}";
} 